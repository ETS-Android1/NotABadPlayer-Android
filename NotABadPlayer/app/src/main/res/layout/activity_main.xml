<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary"
    android:orientation="vertical"
    tools:context=".View.Main.MainActivity">
    
    <LinearLayout
        android:id="@+id/quickPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/colorOverlayBackground"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBottomNavigationBackground"
            app:menu="@menu/navigation"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/bottom_navigation_item_style"
            app:itemTextColor="@drawable/bottom_navigation_item_style"/>
        
    </LinearLayout>
    
</LinearLayout>