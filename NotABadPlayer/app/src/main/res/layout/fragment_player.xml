<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/cover"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="0.25">
        
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/songAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/songArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <SeekBar
            android:id="@+id/mediaBar"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="15dp">

        </SeekBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/durationCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_timer"
                android:textSize="12sp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/durationTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_timer"
                android:textSize="12sp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="0.2">
                <Button
                    android:id="@+id/mediaButtonRecall"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/media_recall"
                    android:backgroundTint="@color/mediaButtons"/>
            </FrameLayout>
            <Button
                android:id="@+id/mediaButtonBack"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="0.2"
                android:background="@drawable/media_previous"
                android:backgroundTint="@color/mediaButtons"/>
            <Button
                android:id="@+id/mediaButtonPlay"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="0.2"
                android:background="@drawable/media_play"
                android:backgroundTint="@color/mediaButtons"/>
            <Button
                android:id="@+id/mediaButtonForward"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="0.2"
                android:background="@drawable/media_next"
                android:backgroundTint="@color/mediaButtons"/>
            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="0.2">
                <Button
                    android:id="@+id/mediaButtonPlayOrder"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/media_sort_repeat"
                    android:backgroundTint="@color/mediaButtons"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
