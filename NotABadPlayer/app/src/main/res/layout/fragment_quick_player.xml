<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="102dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@drawable/cover_art_none"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/labelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxWidth="200dp"
                    android:textSize="14sp"
                    android:text="@string/nothing_playing"
                    android:singleLine="true"/>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/durationCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/zero_timer"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/timer_separator"/>
                    <TextView
                        android:id="@+id/durationTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/zero_timer"
                        android:gravity="right"/>
                </LinearLayout>

            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/mediaButtonBack"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/media_previous"
                    android:backgroundTint="@color/mediaButtons"/>
                <Button
                    android:id="@+id/mediaButtonPlay"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/media_play"
                    android:backgroundTint="@color/mediaButtons"/>
                <Button
                    android:id="@+id/mediaButtonForward"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/media_next"
                    android:backgroundTint="@color/mediaButtons"/>
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

    <SeekBar
        android:id="@+id/mediaBar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent">
    </SeekBar>
    
</android.support.constraint.ConstraintLayout>